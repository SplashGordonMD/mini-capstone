<h1> ORDER FORM </h1>
<%= form_tag "/lemonaids/#{@lemonaid.id}", method: :patch do %>
  <div class="form-group">
  <%= label_tag :name %>
  <%= text_field_tag :name, @lemonaid.name, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= label_tag :price %>
  <%= text_field_tag :price, @lemonaid.price, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= label_tag :image %>
  <%= text_field_tag :image, @lemonaid.image, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= label_tag :discription %>
  <%= text_field_tag :discription, @lemonaid.discription, class: 'form-control' %>
  </div>

  <%= submit_tag 'submit', class: 'btn btn-primary' %>
  <%end%>