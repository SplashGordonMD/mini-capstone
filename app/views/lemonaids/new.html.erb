
<h1> ORDER FORM </h1>
<%= form_tag '/lemonaids', method: :post do %>
  <div class="form-group">
  <%= label_tag :name %>
  <%= text_field_tag :name, "", class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= label_tag :price %>
  <%= text_field_tag :price, "", class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= label_tag :image %>
  <%= text_field_tag :image, "", class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= label_tag :discription %>
  <%= text_field_tag :discription, "", class: 'form-control' %>
  </div>

  <%= submit_tag 'submit', class: 'btn btn-primary' %>
  <%end%>


